---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
{% if page.chapter %}
  {% assign pages = site.chapters | where: "chapter", page.chapter %}
  {% if pages.size > 0 %}
    {% assign pages = pages | sort: "order" %}
    {% assign current_index = pages | index: page %}

    {% if current_index %}
      {% assign prev_index = current_index | minus: 1 %}
      {% assign next_index = current_index | plus: 1 %}
      {% assign last_index = pages.size | minus: 1 %}

      <div class="navigation">
        {% if current_index < last_index %}
          <a href="{{ pages[next_index].url }}" class="next-page">Page suivante</a>
        {% endif %}
      </div>
    {% endif %}
  {% endif %}
{% endif %}
