---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
{% if page.chapter %}  {% assign pages = site.chapters | where: "chapter", page.chapter | sort: "order" %}
  {% assign current_index = pages | index: page %}

  <div class="navigation">
    {% if current_index > 0 %}
      <a href="{{ pages[current_index - 1].url }}" class="previous-page">Page précédente</a>
    {% endif %}

    {% if current_index < pages.size - 1 %}
      <a href="{{ pages[current_index + 1].url }}" class="next-page">Page suivante</a>
    {% endif %}
  </div>
{% endif %}